<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>
    <%= content_for?(:title) ? content_for(:title) + " | " : "" %>
    <%= Rails.configuration.x.branding.ursus? ? 'URSUS' : 'Bridge' %>
    | California Use of Force Incident Reporting
  </title>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <% if Rails.env.development? || ENV['ENABLE_FAST_FORWARD'] == 'true' %>
    <%= javascript_include_tag 'fastforward' %>
  <% end %>

  <%= csrf_meta_tags %>

  <%= favicon_link_tag 'favicon.ico' %>

  <!-- IE-specific overrides. -->
  <!--[if IE]>
    <%= stylesheet_link_tag 'override/ie' %>
  <![endif]-->
  <!--[if lt IE 9]>
    <%= javascript_include_tag 'override/ie8' %>
  <![endif]-->

  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>
